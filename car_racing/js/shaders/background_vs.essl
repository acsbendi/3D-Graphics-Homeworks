Shader.source[document.currentScript.src.split('js/shaders/')[1]] = `#version 300 es
  in vec4 vertexPosition;
  out vec4 rayDir;

  uniform struct {
   mat4 rayDirMatrix;
  } trafo;

  void main(void) {
    rayDir = vertexPosition * trafo.rayDirMatrix;
    gl_Position = vec4(vertexPosition.xy, 0.99999, 1);
  }
